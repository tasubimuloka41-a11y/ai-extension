{
  "manifest_version": 3,
  "name": "Gemma 3 12B AI Assistant",
  "version": "1.0.0",
  "description": "Автономный AI ассистент с интегрированной Gemma 3 12B, Google Drive и возможностью работы со ссылками",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "sidePanel",
    "desktopCapture"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*",
    "https://api.telegram.org/*"
  ],
  "action": {
    "default_title": "Gemma AI Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.js", "panel.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
